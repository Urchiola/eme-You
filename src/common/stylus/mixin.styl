border-1px($color){
	position:relative
	&:after{
        display:block
        content:''
        position:absolute
        width:100%
        left:0
        bottom:0
        border-bottom:1px solid $color
    }
}
border-none1px(){
    &:after{
        display:none
    }
}
border-t1px($color){
	position:relative
    &:before{
        display:block
        content:''
        position:absolute
        width:100%
        left:0
        top:0
        border-top:1px solid $color
    }
}
bg-image($url){
    background-image: url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3){
        background-image: url($url + "@3x.png")
    }
}
